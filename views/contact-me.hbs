        <form class="nama">
            <h2>GET IN TOUCH</h2>
            <div style="margin-bottom: 25px;">
                <label for="input-name">Name</label>
                <input 
                    type="text" 
                    id="input-name" 
                    style="
                        width: 100%; 
                        background-color: white; 
                        border: 1px solid rgb(199, 199, 199);
                        border-radius: 5px;
                        padding: 8px;
                        margin-top: 10px;
                        box-shadow: 5px 5px 5px rgb(206, 203, 203);
                    ">
            </div>

            <div style="margin-bottom: 25px;">
                <label for="input-email" style="font-size: 20px; font-weight: 800;">Email</label>
                <input 
                    type="email" 
                    id="input-email" 
                    style="
                        width: 100%; 
                        background-color:  white; 
                        border: 1px solid rgb(199, 199, 199);
                        border-radius: 5px;
                        padding: 8px;
                        margin-top: 10px;
                        box-shadow: 5px 5px 5px rgb(206, 203, 203);
            ">
            </div>

            <div style="margin-bottom: 25px;">
                <label for="input-number" style="font-size: 20px; font-weight: 800;">Phone Number</label>
                <input 
                    type="text" 
                    id="input-number" 
                    style="
                        width: 100%; 
                        background-color: white; 
                        border: 1px solid rgb(199, 199, 199);
                        border-radius: 5px;
                        padding: 8px;
                        margin-top: 10px;
                        box-shadow: 5px 5px 5px rgb(206, 203, 203)
            ">
            </div>

            <div style="margin-bottom: 25px;">
                <label for="select-subject" style="font-size: 20px; font-weight: 800;">Subject</label>
                <select 
                    id="select-subject" 
                    style="
                        width: 100%; 
                        background-color:  white; 
                        border: 1px solid rgb(199, 199, 199);
                        border-radius: 5px;
                        padding: 8px;
                        margin-top: 10px;
                        box-shadow: 5px 5px 5px rgb(206, 203, 203)
            ">
                    <option></option>
                    <option value="I'm Hiring">I'm Hiring</option>
                    <option value="Let's Collaboration">Let's Collaboration</option>
                    <option value="Let's Talk">Let's Talk</option>
                </select>
            </div>

            <div style="margin-bottom: 25px;" >
                <label for="input-message" style="font-size: 20px; font-weight: 800;">Your Message</label>
                <textarea 
                    id="input-message" 
                    style="
                        width: 100%; 
                        border: 1px solid rgb(199, 199, 199);
                        border-radius: 5px;
                        padding: 8px;
                        margin-top: 10px;
                        height: 150px;
                        resize: none;
                        box-shadow: 5px 5px 5px rgb(206, 203, 203)
                    "></textarea>
